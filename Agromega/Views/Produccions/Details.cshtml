                <div class="col-sm-3">
                    <center><h6 style="background-color:#645047; color:white;">2014</h6></center>
                    <center>@Html.DisplayFor(modelItem => item.T14)</center>
                </div>

                <div class="col-sm-3">
                    <center><h6 style="background-color:#645047; color:white;">2015</h6></center>
                    <center>@Html.DisplayFor(modelItem => item.T15)</center>
                </div>

                <div class="col-sm-3">
                    <center><h6 style="background-color:#645047; color:white;">2016</h6></center>
