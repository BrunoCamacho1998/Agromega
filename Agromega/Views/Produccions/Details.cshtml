@model IEnumerable<Agromega.Models.Precio_Actual>

<br />
<link rel="stylesheet" href="~/Content/Detail.css" />
<body onload="openCity(event,'Precio');">
    <script>
        function openCity(evt, cityName) {
            var i, tabcontent, tablinks;
            tabcontent = document.getElementsByClassName("tabcontent");
            for (i = 0; i < tabcontent.length; i++) {
                tabcontent[i].style.display = "none";
            }
            tablinks = document.getElementsByClassName("tablinks");
            for (i = 0; i < tablinks.length; i++) {
                tablinks[i].className = tablinks[i].className.replace(" active", "");
            }
            document.getElementById(cityName).style.display = "block";
            evt.currentTarget.className += " active";
        }
    </script>
    @foreach (var item in Model)
    {


        <div class="tab">
            <button class="tablinks" onclick="openCity(event,'Precio')">Precios</button>
            <button class="tablinks" onclick="openCity(event,'Tonelada')">Pesos</button>
        </div>
        <div id="Precio" class="tabcontent">
            <h2>@Html.DisplayFor(modelItem => item.Produccion.NombreProducto)</h2>
            <hr />
            <br />
            <h3>PRECIOS POR AÑO</h3>
            <br />
            <h4>Historial (2014-2017)</h4>
            <br />
            <div class="row">

                <div class="col-sm-3">
                    <center><h6 style="background-color:#645047; color:white;">2014</h6></center>
                    <center>@Html.DisplayFor(modelItem => item.F1)</center>
                </div>

                <div class="col-sm-3">
                    <center><h6 style="background-color:#645047; color:white;">2015</h6></center>
                    <center>@Html.DisplayFor(modelItem => item.F2)</center>
                </div>

                <div class="col-sm-3">
                    <center><h6 style="background-color:#645047; color:white;">2016</h6></center>
                    <center>@Html.DisplayFor(modelItem => item.F3)</center>
                </div>

                <div class="col-sm-3">
                    <center><h6 style="background-color:#645047; color:white;">2017</h6></center>
                    <center>@Html.DisplayFor(modelItem => item.F4)</center>
                </div>

            </div>

            <br />
            <h4>Proyeccion (2018-2019)</h4>
            <br />
